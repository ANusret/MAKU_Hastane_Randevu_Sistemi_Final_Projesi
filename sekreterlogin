    private void sifregöster_1ActionPerformed(java.awt.event.ActionEvent evt) {                                              
        if (evt.getSource() == sifregöster_1) {
            if (sifregöster_1.isSelected()) {
                txt_password.setEchoChar((char) 0);
            } else {
                txt_password.setEchoChar('*');
            }
        }
    }                                             

