    }                                            

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int x = JOptionPane.showConfirmDialog(null, "Kaydetmek istediğinize eminmisiniz?", "Kaydet", JOptionPane.YES_NO_OPTION);
        if (x == 0) {
            try {
                String sql = "insert into Hasta (hastaad,hastasoyad,hastatelefon,hastaadres,hastatc,hastadt,hastacnsyt,hastafoto) values (?,?,?,?,?,?,?,?)";
                pst = conn.prepareStatement(sql);

                pst.setString(1, h_isim.getText());
                pst.setString(2, h_soyisim.getText());
                pst.setString(3, h_tel.getText());
                pst.setString(4, h_adres.getText());
                pst.setString(5, h_tc.getText());
                pst.setString(6, h_dogum.getText());
                pst.setString(7, gender);
                pst.setBytes(8, person_image);

                pst.execute();
                JOptionPane.showMessageDialog(null, "Bilgiler başarıyla kaydedildi!");
            } catch (Exception ex) {
                JOptionPane.showMessageDialog(null, "Zaten böyle bir kayıt var!");
                jButton3.doClick();
            } finally {
                try {
                    rs.close();
                    pst.close();
                } catch (Exception e) {

                }
            }
        }
    }                                        

    private void r_erkekActionPerformed(java.awt.event.ActionEvent evt) {                                        
        gender = "Erkek";
        r_erkek.setSelected(true);
        r_kadin.setSelected(false);
    }                                       

    private void r_kadinActionPerformed(java.awt.event.ActionEvent evt) {                                        
        gender = "Kadin";
        r_kadin.setSelected(true);
        r_erkek.setSelected(false);
    }                                       

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        h_isim.setText("");
        h_soyisim.setText("");
        h_tc.setText("");
        h_tel.setText("");
        h_dogum.setText("");
        h_adres.setText("");
        r_erkek.setSelected(false);
        r_kadin.setSelected(false);
    }                                        

    private void txt_araKeyReleased(java.awt.event.KeyEvent evt) {                                    

    }                                   

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        try {
            String sql = "select * from Hasta where hastatc=?";

            pst = conn.prepareStatement(sql);
            pst.setString(1, txt_ara.getText());
            rs = pst.executeQuery();

            String ad1 = rs.getString("hastaad");
            h_isim.setText(ad1);
            String ad2 = rs.getString("hastasoyad");
            h_soyisim.setText(ad2);
            String ad3 = rs.getString("hastatelefon");
            h_tel.setText(ad3);
            String ad4 = rs.getString("hastaadres");
            h_adres.setText(ad4);
            String ad5 = rs.getString("hastatc");
            h_tc.setText(ad5);
            String ad6 = rs.getString("hastadt");
            h_dogum.setText(ad6);
            String ad7 = rs.getString("hastacnsyt");
            if (ad7.equals("Erkek")) {
                r_erkek.setSelected(true);
                r_kadin.setSelected(false);
            } else if (ad7.equals("Kadin")) {
                r_kadin.setSelected(true);
                r_erkek.setSelected(false);
            } else {
                r_erkek.setSelected(false);
                r_kadin.setSelected(false);
            }
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(null, "Kayıt bulunamadı. ");
        } finally {
            try {
                rs.close();
                pst.close();
            } catch (Exception ex) {

            }
        }
    }                                        

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int x = JOptionPane.showConfirmDialog(null, "Kaydı silmek istediğinize eminmisiniz?", "Update Record", JOptionPane.YES_NO_OPTION);
        if (x == 0) {
            try {
                String sql = "delete from Hasta where hastatc=?";
                pst = conn.prepareStatement(sql);
                pst.setString(1, txt_ara.getText());
                pst.execute();
                JOptionPane.showMessageDialog(null, "Kayıt başarıyla silindi.");
                txt_ara.setText("");
                h_isim.setText("");
                h_soyisim.setText("");
                h_tc.setText("");
                h_tel.setText("");
                h_dogum.setText("");
                h_adres.setText(gender);
                r_erkek.setSelected(false);
                r_kadin.setSelected(false);
            } catch (Exception e) {

            } finally {
                try {
                    rs.close();
                    pst.close();
                } catch (Exception ex) {

                }
            }
        }
    }                                        

    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int x = JOptionPane.showConfirmDialog(null, "Kaydı güncellemek istediğinize eminmisiniz?", "Update Record", JOptionPane.YES_NO_OPTION);
        if (x == 0) {
            try {
                String val1 = h_isim.getText();
                String val2 = h_soyisim.getText();
                String val3 = h_tc.getText();
                String val4 = h_tel.getText();
                String val5 = h_dogum.getText();
                String val6 = h_adres.getText();

                String sql = "update Hasta set hastatc='" + val3 + "' ,"
                        + "hastaad='" + val1 + "', hastasoyad = '" + val2 + "', hastatelefon='" + val4 + "',hastadt='" + val5 + "', hastaadres='" + val6 + "' , hastacnsyt = '" + gender + "' where hastatc='" + val3 + "'";
                pst = conn.prepareStatement(sql);
                pst.execute();
                JOptionPane.showMessageDialog(null, "Kayıt başarıyla güncellendi.");
            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e);
            } finally {
                try {
                    rs.close();
                    pst.close();
                } catch (Exception e) {

                }
            }
        }
    }                                        

